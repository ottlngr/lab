pipeline {
	agent none
	stages {
	  stage('Run Tests') {
            parallel {
                stage('Test On Windows') {
                    agent {
                        label "windows"
                    }
                    steps {
                        sh "echo 'Hello'"
                    }
                }
                stage('Test On Linux') {
                    agent {
                        label "linux"
                    }
                    steps {
                        sh "echo 'Hello'"
                    }
                }
            }
        }
    }
}
